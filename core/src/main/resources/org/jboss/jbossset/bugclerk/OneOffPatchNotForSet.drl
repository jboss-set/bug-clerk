package org.jboss.jbossset.bugclerk;

import org.jboss.set.aphrodite.domain.Issue;
import org.jboss.set.aphrodite.domain.IssueType;

import org.jboss.set.aphrodite.domain.Violation;

rule "OneOffPatchNotForSet"
  dialect "mvel"
  when
    $candidate : Candidate( bug.type.toString == "ONE_OFF" || bug.type.toString == "SUPPORT_PATCH",  bug.assignee.get.email.get  == "jboss-set@redhat.com", filtered == false);
  then
    $candidate.addViolation( new Violation(drools.getRule().getName(), "This issue is assigned to SET while it's supported patch - it should be assigned to GSS.") );
end
