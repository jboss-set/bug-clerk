package org.jboss.jbossset.bugclerk;

import org.jboss.set.aphrodite.domain.Issue;
import org.jboss.set.aphrodite.domain.Comment;
import org.jboss.set.aphrodite.domain.IssueStatus;
import org.jboss.set.aphrodite.domain.IssueEstimation;
import org.jboss.set.aphrodite.domain.FlagStatus;
import org.jboss.set.aphrodite.domain.Flag;

import org.jboss.jbossset.bugclerk.Violation;
import org.jboss.jbossset.bugclerk.Level;

rule "BZShouldHaveTimeEstimate_PostOrModified"
	salience 0
    dialect "mvel"
    when
      $candidate : Candidate($status: bug.status, ! bug.estimation.isPresent() || bug.estimation.get.initialEstimate == 0.0, bug.status.toString == "POST" || bug.status.toString == "MODIFIED", filtered == false);
    then
      insertLogical(new Violation($candidate, drools.getRule().getName(), "Issue has status " + $status + " but has no estimated time associated.", Level.WARNING));
end

rule "BZShouldHaveTimeEstimate_DevAcked"
	salience 0
    dialect "mvel"
    when
      $candidate : Candidate(! bug.estimation.isPresent() || bug.estimation.get.initialEstimate == 0.0,  bug.stage.getStateMap.get(Flag.DEV) == FlagStatus.ACCEPTED || bug.stage.getStateMap.get(Flag.DEV) == FlagStatus.SET, filtered == false);
    then
      insertLogical(new Violation($candidate, drools.getRule().getName(), "Issue has been dev acked, but has no estimated time associated.", Level.WARNING));
end
